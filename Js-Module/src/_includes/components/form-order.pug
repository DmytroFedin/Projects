mixin form-order()
  .hystmodal(id="js-order" aria-hidden="true")
    .hystmodal__wrap
        .hystmodal__window(role="dialog" aria-modal="true")
          button(data-hystclose class="hystmodal__close") Закрыть 
          .c-sign-up
            h2.c-sign-up__text Sign Up
            form.c-sign-up__input(action='#' method='POST')
              label First name
              input(name='first name' type="text" id='js-first-name' required)
              label Last name
              input(name='lat name' type="text" id='js-last-name' required)
              label Email
              input(name='email' type="email" id='js-email' required)
              label Telephone
              input(name='telephone' type="tel" id='js-username' required)
              label Country
              input(name='country' type="text" id='js-password' required)
              label City
              input(name='city' type="text" id='js-check-password' required)
            button(id='js-sign-up').c-sign-up__btn
              span.c-sign-up__btn__text(type= 'submit' title="Click to submit") Create
          