mixin slider(args)
  - let sliderTitle = args.sliderTitle || 'default title'
  - let slideHeader1 = args.slideHeader1 || 'default header'
  - let slideHeader2 = args.slideHeader2 || 'default header'
  - let slideHeader3 = args.slideHeader3 || 'default header'
  - let slideInfo1 = args.slideInfo1 || 'default info'
  - let slideInfo2 = args.slideInfo2 || 'default info'
  - let slideInfo3 = args.slideInfo3 || 'default info'
  - let slideSrc1 = args.slideSrc1 || './assets/images/Placeholder.png'
  - let slideSrc2 = args.slideSrc2 || './assets/images/Placeholder.png'
  - let slideSrc3 = args.slideSrc3 || './assets/images/Placeholder.png'


  .c-slider
    .c-slider__title=sliderTitle
    .swiper 
      .swiper-wrapper 
        .swiper-slide
          .c-slider__slide__image
            img(src=slideSrc1, alt='Clothing')
          .c-slider__slide__info
            .c-slider__slide__header=slideHeader1
            .c-slider__slide__description=slideInfo1
        .swiper-slide 
          .c-slider__slide__image
            img(src=slideSrc2, alt='Clothing')
          .c-slider__slide__info
            .c-slider__slide__header=slideHeader2
            .c-slider__slide__description=slideInfo2
        .swiper-slide 
          .c-slider__slide__image
            img(src=slideSrc3, alt='Clothing')
          .c-slider__slide__info
            .c-slider__slide__header=slideHeader3
            .c-slider__slide__description=slideInfo3
    .swiper-button-prev
    .swiper-button-next