  .c-sign-in__container
    .c-sign-in__container__wrapper
      .c-sign-in__form-swapper
        .c-sign-in__form-swapper__wrapper
          .c-sign-in__form-swapper__title
            a(href="#").e-sign-in__switch-title--form-indicator Sign in
            a(href="#").e-sign-in__switch-title--form-indicator Join us
          form(action="" method="post").c-sign-in__form-swapper__form-block
