              span.c-sign-in__item-name Username
              input(type="text" name='Username' placeholder=' ' required).e-sign-in__input.e-sign-in__input--transparent-white-border
            label.c-sign-in__form-item 
              span.c-sign-in__item-name Password
              input(type="password" name='Password' placeholder=' ' required, pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}").e-sign-in__input.e-sign-in__input--transparent-white-border

            label.c-sign-in__form-item.c-sign-in__form-item--flex-reversed 
              span.c-sign-in__item-name Keep me signed in
              input(type="checkbox" name='Consent').e-sign-in__input-checkbox--big-green
            .c-sign-in__form-submit
              button(type='submit').e-sign-in__button-submit.e-sign-in__button-submit--teal
                span.e-sign-in__button-text Sign In

            .c-sign-in__form-help 
              .c-sign-in__form-help__items
                a(href="#").e-sign-in__help-links Forgot password
              .c-sign-in__form-help__items
                a(href="#").e-sign-in__help-links Create an account

